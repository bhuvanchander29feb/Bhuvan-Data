<script>
function doSearch() {
 var q = document.getElementById("q").value;
 var search_url = "http://www.plantorama.dk/soeg?Search=";
 document.location.href = search_url+q;
 return true;
}
$( "#target" ).submit(function( event ) {
 event.preventDefault();
var q = document.getElementById("q").value;
 var search_url = "http://www.plantorama.dk/soeg?Search=";
 document.location.href = search_url+q;
 return false;
});
</script>
